{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@shared-types/*": ["packages/shared-types/src/*"]
    }
  }
}

